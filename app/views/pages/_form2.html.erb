<%= simple_form_for(@page) do | f | %>
  <%= f.input :image,:as => :hidden %>
  <%= f.input :page_body, as: :summernote, label: false %>
  <%= f.input :page_name %>
  <%= f.submit class:"btn btn-danger" %>
<% end %>


