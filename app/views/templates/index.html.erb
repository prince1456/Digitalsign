<div class="container containerfortemplate">
  <h1 class="text-center">Templates</h1>
    <% @templates.each do |template| %>
      <div class="cont-template">
        <div class="col-md-3 "><h3><%= template.temp_name %></h3></div>
        <div class="col-md-7"><%= image_tag template.image, class:"img-template" %></div>
        <div class="col-md-2"><%= link_to 'Show', template %>-
        <%= link_to 'Edit', edit_template_path(template) %>-
        <%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' } %></div>

      </div>
    <% end %>
  </div>

